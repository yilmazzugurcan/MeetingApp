@model List<UserInfo>

@{
    ViewBag.Title = "Toplantı Katılım Listesi Özeti";
}

<main class="text-center">

    <h1 class="h4">Toplantı Katılım Listesi</h1>
    <table class="table table-bordered">
        <thead>
            <tr>
                <td>Ad</td>
                <td>Katılım Durum</td>
                <td></td>
            </tr>
        </thead>
        <tbody>

            @{int i=0;}

            @foreach (var user in Model)
            {
                var durum= user.WillAttend == true ? "Evet":"Hayır";
                var classname = user.WillAttend == true ? "table-success":"table-danger";

                if(user.WillAttend == true){
                    i++;
                }

                <tr class="@classname">
                    <td>@user.Name</td>
                    <td>@durum</td>
                    <td>
                        <a class="btn btn-sm btn-primary" href="/meeting/details/@user.Id">Detay</a>
                    </td>
                </tr>

            }
        </tbody>
    </table>
    <div class="card">
        <div class="card-body">
            <p>Katılımcı sayısı: @i</p>
        </div>
    </div>
</main>